<h1>Books index</h1>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag('no_image.jpg') %>
      <table class="table">
       <tbody>

        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th></th>
        </tr>

       </tbody>
      </table>
      <div class="row">
        <!-- user_editへのリンク -->
      </div>

      <!-- 新規投稿部分-->
      <h2>New book</h2>

     　<%= form_with model:@book,local:true do |f| %>
       <div class="form-group">
         <label for="book_title">Title</label>
         <%= f.text_field :title %>
       </div>
       <div class="form-group">
         <label for="book_opinion">Opinion</label>
         <%= f.text_area :body %>
       </div>
       <div class="form-group">
        <%= f.submit 'Create Book' %>
       </div>
       <% end %>
    </div>
  </div>

  <!-- Create Bookの詳細（投稿したやつ一つだけ表示) -->
  <div class="col-md-8 offset-md-1">
    <h2>Book　detail</h2>
     <% @books.each do |book| %>
     <table class="table">
      <tbody>
        <tr>
          <td><%= image_tag('no_image.jpg') %></td>
          <td><%= link_to book.title,book_path(book) %></td>
          <td><%= book.body %></td>
          <td><%= link_to"Edit",edit_book_path(@books) %></td>
          <td><%= link_to"Delete" %></td>
        </tr>
      </tbody>

     </table>
     <% end %>
  </div>


</div>
</div>